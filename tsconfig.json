{
    "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "build",
    "baseUrl": "./types",
    "moduleResolution": "node",
    "importHelpers": true,
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
    },
    "include": [
    "tests/**/*.ts"
    ],
    "exclude": [
    "node_modules/"
    ]
    }